<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_required_when_Status_closed</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
ISPICKVAL(  Status__c  , &quot;Closed&quot; ),
ISPICKVAL(   Reason__c   , &quot;&quot; )
)</errorConditionFormula>
    <errorMessage>When Status equals Closed, Reason is required</errorMessage>
</ValidationRule>
