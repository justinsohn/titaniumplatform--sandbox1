<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Link_to_Feature_Card_is_Required</fullName>
    <active>true</active>
    <description>Link to feature card(s) is required when the status is accepted.</description>
    <errorConditionFormula>AND( ISPICKVAL(   Status__c  , &quot;Accepted&quot;), ISBLANK(   Link_to_Feature_Card_s__c  ) )</errorConditionFormula>
    <errorDisplayField>Link_to_Feature_Card_s__c</errorDisplayField>
    <errorMessage>Link to Feature Card(s) is Required</errorMessage>
</ValidationRule>
